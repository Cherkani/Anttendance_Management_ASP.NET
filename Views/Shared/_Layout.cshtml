@{
    Layout = null; // This line ensures that this view doesn't inherit the layout from the _Layout.cshtml file.
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .logo-image {
            width: 200px;
            height: 150px;
            margin: 0;
            border-radius: 50px;
        }

        .white-box {
            background-color: none;
            padding: 10px;
            border-radius: 10px;
            margin-top: 20px;
            width: 600px;
        }

        .btn-logout {
            font-size: 20px;
            color: #007bff;
            text-decoration: none;
            text-align: center;
        }

            .btn-logout:hover {
                color: #0056b3;
            }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <img src="../../images/logo.jpg" alt="Logo" class="logo-image">
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/" asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-house-fill"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>


                        <li>
                            <a href="/Eleves" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-person-plus"></i><span class="ms-1 d-none d-sm-inline">Eleves</span>
                            </a>

                        </li>

                        <li>
                            <a href="/Absences" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-calendar-x"></i><span class="ms-1 d-none d-sm-inline">Absences</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Filieres" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-book"></i><span class="ms-1 d-none d-sm-inline">Filieres</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Matieres" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-pen"></i><span class="ms-1 d-none d-sm-inline">Matieres</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="white-box ">
                        <a href="/Account/Login" class="btn-logout align-middle " style=" font-size: 30px;">
                            <i class="bi bi-door-closed"></i> Logout
                        </a>

                    </div>

                </div>
            </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EFCoreWithAsp.netCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
